{
    "StartAt": "SendApprovalRequest",
    "States": {
      "SendApprovalRequest": {
        "Type": "Task",
        "Resource": "arn:aws:states:::sns:publish.waitForTaskToken",
        "Parameters": {
          "Message": {
            "Fn::Join": ["", [
              "承認リンク: ${ApproveUrl}?token=", "$$.Task.Token"
            ]]
          },
          "TopicArn": "${SNSHumanApprovalEmailTopic}"
        },
        "TimeoutSeconds": 3600,
        "Next": "HandleApproved"
      },
      "HandleApproved": {
        "Type": "Pass",
        "Result": "承認された！",
        "End": true
      }
    }
  }